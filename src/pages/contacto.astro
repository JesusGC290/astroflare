---
import Layout from "../layouts/Layout.astro";
import { SpotlightContacto } from "../components/spotlight-contacto";
import { ShootingStarsAndStarsBackgroundHome } from "../components/shooting-stars-withBackground-home";
import { Mail, Phone, Twitter, Instagram, Facebook } from "lucide-react";
---

<Layout>
  <section>
    <SpotlightContacto client:load />
  </section>
  <section class="my-20 md:mt-24 lg:mt-28 xl:mt-36 relative w-full max-w-screen-xl mx-auto px-4 sm:px-8">
    <div class="space-y-1">
      <span
        class="bg-clip-text text-transparent bg-gradient-to-r from-[var(--flare-red-500)] to-[var(--flare-pink-300)] font-semibold text-3xl"
      >
        Mándanos un mensaje
      </span>
      <p class="mt-3 w-full lg:w-2/3 xl:w-1/2 text-base lg:text-balance font-light">
        Completa el formulario con tu nombre, correo electrónico y una breve descripción de tu proyecto. Nos pondremos
        en contacto contigo para discutir los siguientes pasos y ayudarte a hacer realidad tu sitio web.
      </p>
    </div>
    <div
      class="stardust opacity-75 w-full shrink-0 absolute rotate-[15deg] -z-50 scale-x-[2.5] scale-y-[2.5] rounded-full mask-radial-gradient h-56 md:h-80 lg:h-96"
    >
    </div>
    <div
      class="stardust opacity-50 w-full shrink-0 absolute rotate-[15deg] -z-50 scale-x-[3.5] scale-y-[4.2] rounded-full mask-radial-gradient h-56 md:h-80 lg:h-96"
    >
    </div>
    <div class="flex flex-col md:flex-row justify-between mt-12 space-y-8 md:space-y-0 md:space-x-8">
      <!-- Izquierda: el formulario dentro de un contenedor -->
      <div
        class="w-full max-w-xl rounded-none bg-gray-200 px-4 md:px-8 pt-4 md:pt-8 pb-0 md:rounded-2xl h-[440px] overflow-hidden flex-shrink-0"
      >
        <!-- HubSpot Form -->
        <div
          class="hs-form-frame"
          data-region="na1"
          data-form-id="baf17ff5-2268-47d6-ae9e-89d212a22dec"
          data-portal-id="46678301"
        >
        </div>
      </div>

      <!-- Separador vertical (opcional para pantallas grandes) -->
      <div class="hidden md:block my-8 w-[1px] h-auto bg-gradient-to-b from-transparent via-neutral-300 to-transparent">
      </div>

      <!-- Derecha: Información de contacto -->
      <div class="flex-1 max-w-md space-y-6">
        <h3 class="text-xl md:text-2xl font-bold">Otros medios</h3>

        <!-- Correo -->
        <div class="flex items-center space-x-3">
          <Mail className="w-6 h-6 text-[var(--flare-green-300)]" />
          <a
            href="mailto:hola@astroflare.ai"
            target="_blank"
            class="text-gray-200 hover:underline hover:text-[var(--flare-green-300)]"
          >
            hola@astroflare.ai
          </a>
        </div>

        <!-- Teléfono -->
        <div class="flex items-center space-x-3">
          <Phone className="w-6 h-6 text-[var(--flare-green-300)]" />
          <a href="tel:+523315281515" class="text-gray-200 hover:underline hover:text-[var(--flare-green-300)]">
            +52 3315281515
          </a>
        </div>

        <!-- Redes sociales -->
        <div>
          <p class="mb-2 font-semibold text-gray-200">Síguenos en redes:</p>
          <div class="flex items-center space-x-4">
            <!-- Ejemplo: Twitter -->
            <a
              href="https://twitter.com/astroflareai"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-blue-400"
            >
              <!-- Twitter de lucide-react -->
              <Twitter />
            </a>
            <!-- Ejemplo: Instagram -->
            <a
              href="https://instagram.com/astroflareai"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-pink-500"
            >
              <!-- Instagram de lucide-react -->
              <Instagram />
            </a>
            <!-- Ejemplo: Facebook -->
            <a
              href="https://facebook.com/astroflareai"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-blue-600"
            >
              <!-- Facebook de lucide-react -->
              <Facebook />
            </a>
          </div>
        </div>

        <!-- Opcional: dirección física u otros datos -->
        <div>
          <p class="mb-2 font-semibold">¿Dónde estamos?</p>
          <p class="text-gray-200">
            Trabajamos de forma remota en todo el mundo. <br />
            Guadalajara, México.
          </p>
        </div>

        <!-- Opcional: horario de atención -->
        <div>
          <p class="mb-2 font-semibold">Horario de atención</p>
          <p class="text-gray-200">Lunes a Viernes: 9 AM - 6 PM (GMT-6)</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
